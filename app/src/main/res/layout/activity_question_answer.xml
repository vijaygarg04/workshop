<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.vijaygarg.workshop.QuestionAnswer">
<TextView
    android:textSize="17sp"
    android:textColor="#000000"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:text="Why Are You Interested For This WorkShop?"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Answer"
        android:gravity="right"
        android:id="@+id/answer1"/>
    <TextView
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills You Have Already That will help you in this workshop?"/>
    <EditText
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Answer"
        android:id="@+id/answer2"/>
    <Button
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8fFF8f"
        android:text="Submit"
        android:id="@+id/submit"/>

</LinearLayout>
